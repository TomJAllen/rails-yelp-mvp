<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, :label => "What did you think of #{@restaurant.name}?" %>
    <%= f.input :rating,
                :label => "What rating would you give #{@restaurant.name}? (out of 5)",
                :collection => [1, 2, 3, 4, 5] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit%>
  </div>
<% end %>
